---
import { Icon } from "astro-icon/components";

interface Props {
    icon: string;
    title: string;
    url: string;
    description: string;
    button: string;
}

const { icon, title, url, description, button } = Astro.props;
---

<section
    class="group flex flex-col items-center p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border hover:border-blue-100 transform hover:-translate-y-1 bg-white border-gray-100"
>
    <div
        class="mb-4 p-3 bg-blue-100 rounded-full transition-colors duration-300 group-hover:bg-blue-200"
    >
        <Icon name={icon} class="w-6 h-6 text-blue-600" />
    </div>
    <h2 class="text-2xl font-black mb-2 text-gray-900">{title}</h2>
    <p class="mb-6 text-center text-sm text-gray-600">{description}</p>
    <a
        href={url}
        class="inline-flex items-center px-5 py-2.5 hover:bg-blue-700 font-medium rounded-lg transition-all duration-300 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 bg-blue-600 text-white"
    >
        {button}
        <Icon name="tabler:arrow-narrow-right" class="w-4 h-4 ml-2 mr-1" />
    </a>
</section>
