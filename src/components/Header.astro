---
import { seoOptions } from "../utils/seo/seoData";
import Nav from "./Nav.astro";
import Logout from "../utils/auth/Logout.svelte";
---

<header
    class="w-full h-16 flex flex-row justify-center items-center bg-blue-400"
>
    <div
        class="w-full sm:w-10/12 h-full flex flex-row items-center justify-between"
    >
        <a
            href="/"
            class="w-12 h-12 transition duration-300 ease-in-out hover:scale-110"
        >
            <picture class="w-full h-full">
                <img
                    src={seoOptions.favicon}
                    alt="Logo de la web"
                    class="w-full h-full"
                />
            </picture>
        </a>
        <Nav />
        <Logout client:load />
    </div>
</header>
